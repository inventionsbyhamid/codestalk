<% if !user_signed_in? %>
<div class="row">
<div class="col l6 offset-l3 m12 s12 center">
<h3>Stalk your friends!</h3>
<h5>Get email updates when someone solves a problem on codechef.com!</h5>
<br>
<h4><%= link_to 'Start Stalking',new_handle_path %></h4>
</div>
</div>
<div class="col l6 offset-l3 m12 s12 center">
<% @codechef_ids.each do |recent_id| %>
<p><%= "Someone added #{recent_id.username} for tracking #{time_ago_in_words(recent_id.created_at)} ago"%></p>
<% end %>
</div>
<% else %>
<br>
<br>
<div class="row">
<div class="card col l10 offset-l1 m12 s12">
<h3>Listing Codechef Ids</h3>
<h5><%= link_to 'New Codechef Id', new_handle_path %></h5>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.handles.each do |codechef_id| %>
      <tr>
        <td><%= codechef_id.username %></td>
        <td><%= codechef_id.team %></td>
        <td><%= link_to 'Show', codechef_id %></td>
        <td><%= link_to 'Destroy', codechef_id, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
</div>
<% end %>